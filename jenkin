pipeline {
  agent any 
  stages {
     stage('Build') {
       steps { 
          sh 'docker build -t nilotpalgure1998/dvga:latest .'
       }
     }
     
     stage('Scan') {
     	steps {
	    sh 'trivy --exit-code 1 --no-progress image --severity HIGH,CRITICAL nilotpalgure1998/dvga:latest'
        }
     }
  }
}
